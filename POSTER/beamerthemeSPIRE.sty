% Beamertheme for SPIRE Lab posters
% Based on work by Philippe Dreuw, Thomas Deselaers, James Malcolm, Shawn Lankton

\ProvidesPackage{beamerthemeLankton}

%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%
\mode<presentation>
%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%

% -------------------------------------------------------
% Colors
% -------------------------------------------------------
\definecolor{butter}{rgb}{0.98824, 0.91373, 0.30980}
\definecolor{orange}{rgb}{0.98824, 0.68627, 0.24314}
\definecolor{spire1}{rgb}{0.9412, 0.6078, 0.2824}

% Dark colors
\definecolor{burntumber}{rgb}{0.54, 0.2, 0.14}
\definecolor{sienna}{rgb}{0.53, 0.18, 0.09}
\definecolor{rosewood}{rgb}{0.4, 0.0, 0.04}

% Light colors
\definecolor{burlywood}{rgb}{0.87, 0.72, 0.53}
\definecolor{mahogany}{rgb}{0.75, 0.25, 0.0}
\definecolor{bronze}{rgb}{0.8, 0.5, 0.2}

\setlength{\itemindent}{50pt}

% Bullet using SPIRE logo
\newcommand*{\upbullet}{\includegraphics[width=0.5em]{spire_logo_bullet_transparent.png}}
\setbeamertemplate{itemize item}{\raisebox{0.1ex}{\upbullet}\hskip0.1em}

% Basic color setup
\setbeamercolor{headline}{bg=burlywood!25}
\setbeamercolor{title in headline}{fg=mahogany}
\setbeamercolor{structure}{fg=burntumber}
\setbeamercolor{title}{bg=burntumber,fg=white}
\setbeamercolor{background canvas}{bg=white}
\setbeamercolor{block body}{bg=burlywood!25}
\setbeamercolor{normal text}{fg=rosewood}
\setbeamercolor{author in head/foot}{fg=white,bg=burntumber}
\setbeamercolor{block title}{bg=mahogany!40,fg=burntumber,series=\sc\bf}
\setbeamercolor{{lower separation line head}}{mahogany}
\setbeamercolor{author in headline}{fg=mahogany}
\setbeamercolor{separation line}{bg=burntumber}
\setbeamercolor{institute in headline}{fg=mahogany}
\setbeamercolor{website in footline}{fg=white}
\setbeamercolor{email in footline}{fg=white}
\setbeamercolor{upper separation line head}{fg=burntumber}

\setbeamertemplate{blocks}[rounded][shadow=false]
\setbeamertemplate{navigation symbols}{}  % no navigation on a poster

% -------------------------------------------------------
% Block appearance
% -------------------------------------------------------
\setbeamertemplate{block begin}{
  \vskip.5ex
  \begin{beamercolorbox}[rounded=true,shadow=false,center,colsep*=.5ex]{block title}
    \usebeamerfont*{block title}{\Large \textbf \insertblocktitle}
  \end{beamercolorbox}%
  {\ifbeamercolorempty[bg]{block body}{}{\nointerlineskip\vskip-0.5pt}}%
  \usebeamerfont{block body}%
  \begin{beamercolorbox}[rounded=true,shadow=false,colsep*=.5ex,sep=.5ex,vmode]{block body}%
    \ifbeamercolorempty[bg]{block body}{\vskip-.25ex}{\vskip-.5ex}\vbox{}%
}
\setbeamertemplate{block end}{
  \end{beamercolorbox}
}

% -------------------------------------------------------
% Header: IISc + SPIRE (left) — Title block (center) — ASRU (right)
% -------------------------------------------------------
\setbeamertemplate{headline}{

  \begin{beamercolorbox}[wd=\paperwidth]{upper separation line head}
    \rule{0pt}{10pt}
  \end{beamercolorbox}

  \begin{beamercolorbox}[wd=\paperwidth]{headline}

    % === Three-column aligned header layout ===
    \begin{tabular}{m{0.12\paperwidth} m{0.72\paperwidth} m{0.14\paperwidth}}

      % ---------------- Left Logos ----------------
      \raggedright
      \hspace{0.01\paperwidth}
      \includegraphics[height=0.075\paperheight]{POSTER/iisc_big.png}%
      \hspace{0.01\paperwidth}%
      \includegraphics[height=0.075\paperheight]{POSTER/spire_logo_transparent.png}%
      &
      % ---------------- Center Title Block ----------------
      \centering
      {\\[16mm]\usebeamercolor{title in headline}{\color{fg}\Large\textbf{\inserttitle}}}\\[-0.3em]
      {\usebeamercolor{author in headline}{\color{fg}\normalsize\insertauthor}}\\[-0.3em]
      {\usebeamercolor{institute in headline}{\color{fg}\normalsize\insertinstitute}}
      &
      % ---------------- Right Logo ----------------
      \raggedleft
      \includegraphics[height=0.06\paperheight]{POSTER/logos/asr2025_logo.png}

    \end{tabular}

    % \vspace{2ex}

  \end{beamercolorbox}

  \begin{beamercolorbox}[wd=\paperwidth]{lower separation line head}
    \rule{0pt}{10pt}
  \end{beamercolorbox}
}

% -------------------------------------------------------
% Footer with website (left) and email (right)
% -------------------------------------------------------
\setbeamertemplate{footline}{
  \begin{beamercolorbox}[wd=\paperwidth]{upper separation line foot}
    \rule{1pt}{0.005\textheight}
  \end{beamercolorbox}
  \leavevmode%
  \begin{beamercolorbox}[ht=4ex,leftskip=0cm,rightskip=0cm]{author in head/foot}%
    \usebeamercolor{website in footline}{\color{fg}\textbf{\footleft}}
    \hfill
    \usebeamercolor{email in footline}{\color{fg}\textbf{\footright}}
    \vskip0.5ex
  \end{beamercolorbox}
}

